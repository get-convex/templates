{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    /* This should only be used when developing components to be published.
     * Apps that merely use the component do not need this.
     * Note: To most reliably see the component's library's types, remove this,
     * which requires you to re-build your component on changes.
     */
    "customConditions": ["@convex-dev/component-source"],
    "noEmit": true
  },
  "include": ["./src", "vite.config.ts"]
}
