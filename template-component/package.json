{
  "name": "@example/sharded-counter",
  "description": "A sharded counter component for Convex.",
  "repository": "github:example-org/sharded-counter",
  "homepage": "https://github.com/example-org/sharded-counter#readme",
  "bugs": {
    "url": "https://github.com/example-org/sharded-counter/issues"
  },
  "version": "0.1.0",
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "component"
  ],
  "type": "module",
  "scripts": {
    "dev": "run-p -r 'dev:backend' 'dev:frontend'",
    "dev:backend": "convex dev --live-component-sources --typecheck-components",
    "dev:frontend": "cd example && vite --clearScreen false",
    "predev": "npm run dev:backend -- --until-success",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "build": "tsc --project ./tsconfig.build.json && npm run copy:dts",
    "copy:dts": "rsync -a --include='*/' --include='*.d.ts' --exclude='*' src/ dist/ || cpy 'src/**/*.d.ts' 'dist/' --parents",
    "typecheck": "tsc --noEmit && tsc -p example/ && tsc -p example/convex",
    "typecheck:package": "tsc -p example/ --customConditions [] && tsc -p example/convex --customConditions []",
    "dev:package": "convex dev --typecheck-components --once",
    "lint": "eslint src && eslint example/convex",
    "all": "run-p -r 'dev:backend' 'dev:frontend' 'test:watch'",
    "test": "vitest run --typecheck",
    "test:watch": "vitest --typecheck --clearScreen false",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "prepare": "npm run build",
    "alpha": "npm run clean && npm ci && run-p test lint typecheck:package && npm run dev:package && npm version prerelease --preid alpha && npm publish --tag alpha && git push --tags",
    "release": "npm run clean && npm ci && run-p test lint typecheck:package && npm run dev:package && npm version patch && npm publish && git push --tags",
    "version": "pbcopy <<<$npm_package_version; vim CHANGELOG.md && prettier -w CHANGELOG.md && git add CHANGELOG.md"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@convex-dev/component-source": "./src/client/index.ts",
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./react": {
      "@convex-dev/component-source": "./src/react/index.ts",
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./test": "./src/test.ts",
    "./convex.config": {
      "@convex-dev/component-source": "./src/component/convex.config.ts",
      "types": "./dist/component/convex.config.d.ts",
      "default": "./dist/component/convex.config.js"
    }
  },
  "peerDependencies": {
    "convex": ">=1.24.8 <1.35.0",
    "react": "^18.3.1 || ^19.0.0"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.0.0",
    "@edge-runtime/vm": "^5.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "9.37.0",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.0",
    "chokidar-cli": "3.0.0",
    "convex-test": "0.0.38",
    "cpy-cli": "^6.0.0",
    "eslint": "9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "npm-run-all2": "7.0.2",
    "pkg-pr-new": "^0.0.60",
    "prettier": "3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.34.1",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "types": "./dist/client/index.d.ts",
  "module": "./dist/client/index.js"
}
