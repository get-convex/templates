{
  "name": "template-component",
  "description": "A template for a Convex component",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "component"
  ],
  "type": "module",
  "scripts": {
    "setup": "npm i && npm run build && npm run dev:backend -- --once",
    "all": "run-p -r 'dev:backend' 'dev:frontend' 'build:watch' 'test:watch'",
    "dev": "run-p -r 'dev:backend' 'dev:frontend' 'build:watch'",
    "dev:backend": "convex dev --live-component-sources --typecheck-components",
    "dev:frontend": "cd example && vite --clearScreen false",
    "predev": "npm run build && npx convex dev --until-success",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "build": "tsc --project ./tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:watch": "npx chokidar 'tsconfig*.json' 'src/**/*.ts' -i '**/*.test.ts' -c 'npm run build' --initial",
    "typecheck": "tsc --noEmit && tsc -p example/convex",
    "lint": "eslint src && eslint example/convex",
    "test": "vitest run --typecheck",
    "test:watch": "vitest --typecheck --clearScreen false",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "attw": "attw $(npm pack -s) --exclude-entrypoints ./convex.config --profile esm-only",
    "alpha": "npm run clean && npm run build && run-p test lint typecheck attw && npm version prerelease --preid alpha && npm publish --tag alpha && git push --tags",
    "release": "npm run clean && npm run build && run-p test lint typecheck attw && npm version patch && npm publish && git push --tags",
    "version": "pbcopy <<<$npm_package_version; vim CHANGELOG.md && prettier -w CHANGELOG.md && git add CHANGELOG.md"
  },
  "files": [
    "package.json",
    "dist",
    "src"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@convex-dev/component-source": "./src/client/index.ts",
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./react": {
      "@convex-dev/component-source": "./src/react/index.ts",
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./test": "./src/test.ts",
    "./convex.config": {
      "@convex-dev/component-source": "./src/component/convex.config.ts",
      "types": "./dist/component/convex.config.d.ts",
      "default": "./dist/component/convex.config.js"
    }
  },
  "peerDependencies": {
    "convex": "^1.24.8",
    "react": "^18.3.1 || ^19.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.0",
    "@edge-runtime/vm": "^5.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "9.37.0",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "chokidar-cli": "3.0.0",
    "convex-test": "0.0.38",
    "eslint": "9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "npm-run-all2": "7.0.2",
    "prettier": "3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsc-alias": "^1.8.16",
    "typescript": "5.5.4",
    "typescript-eslint": "8.34.1",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "types": "./dist/client/index.d.ts",
  "module": "./dist/client/index.js"
}
