    "start": "next start",
    "lint": "eslint . --ignore-pattern \"convex/_generated/**\""
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.90",
    "convex": "^1.31.7",
    "next": "16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.11",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "dotenv": "^17.2.4",
    "eslint": "^10.0.1",
    "eslint-config-next": "16.1.6",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
